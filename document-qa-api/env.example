# LLM Provider Configuration
# Choose one: groq, bytedance, openai
LLM_PROVIDER=groq

# Groq Configuration (if using Groq)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# ByteDance Configuration (if using ByteDance)
BYTEDANCE_API_KEY=your_bytedance_api_key_here
BYTEDANCE_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
BYTEDANCE_MODEL=your_endpoint_id_here

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Server Configuration
PORT=3001

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,txt

